<!-- 漫画首页 浏览展示 -->
<scroll-view class="view-body" scroll-y="true" enable-flex="true" bindscrolltolower="scrollToLowerHandle">
  <!-- 幻灯片区 Main -->
  <view class="slide-wrapper">
    <swiper autoplay="true" interval="3500" circular="true">
      <swiper-item wx:for="{{slideList}}" wx:key="index" data-comicId="{{item.comicId}}" bindtap="gotoBookDetail">
          <image src="{{ coverHost }}{{ item.imgUrl }}"></image>
      </swiper-item>
    </swiper>
  </view>

  <!-- 漫画浏览 Main -->
  <view class="comic-main">
    <view class="book-content">
      <view class="mult sow" wx:for="{{ comicList }}" wx:key="index" wx:for-item="list">
        <view class="mult-head" wx:if="{{index > 0}}">
            <view class="left" bindtap="gotoComicList" data-comicList="{{list}}">
                <text class="mult-title">{{ list.title }}</text>
                <van-icon class="arrow" name="arrow"/> <!-- 标题 -->
            </view>
            <view class="refresh" bindtap="refreshComicList" data-comicIndex="{{index}}">
                <text>换一换</text>
                <van-icon name="replay" />
            </view>
        </view> <!-- 块头部 E -->

        <view class="mult-body" wx:if="{{index == 0}}" style="padding: 0 20%;">
          <block wx:for="{{ list.comic_info }}" wx:key="index" wx:for-item="comic">
            <comic-card 
              style="width: 25%;" 
              url="{{comic.url}}"
              imgUrl="/static/images/other/{{comic.comic_name}}.png"
              horizonratio="2:2"
              title="作品{{comic.comic_name}}" 
              feature="{{comic.content}}"
              touch_select="false"
            />
          </block>
        </view> 

        <view class="mult-body" wx:if="{{index > 0}}">
          <block wx:for="{{ list.comic_info }}" wx:key="index" wx:for-item="comic" wx:if="{{index < 6}}">
            <comic-card 
              style="width: 31.5%;" 
              url="/pages/bookDetails/bookDetails?comicId={{ comic.comic_id }}"
              imgUrl="https://image.yqmh.com/mh/{{comic.comic_id}}.jpg-300x400.jpg"
              horizonratio="3:4"
              title="{{comic.comic_name}}" 
              feature="{{comic.content}}"
              touch_select="false"
            />
          </block>
          <!-- <view class="bottom">查看更多</view>
          <view class="bottom">换一换</view> -->
        </view> <!-- 块主体 E -->
      </view> <!-- 书卡片 E -->
    </view>
    <!-- 加载更多数据_等待Load -->
    <refresh isHidRefresh="{{isHidRefresh}}"  isNoMore="{{isNoMore}}" />
  </view>
</scroll-view>

<!-- 数据渲染_等待Load -->
<wait isHidWait="{{ isHidWait }}"></wait>

