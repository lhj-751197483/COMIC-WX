/* pages/comicList/comicList.wxss */
.comic-list {
    width: 100vw;
    height: 100vh;
    margin: 0 auto;
}

.comic-wrapper {
    padding: 0 var(--padding-md, 38rpx);
    margin-top: 150rpx;
}
  
.comic-wrapper .comic-details {
    display: flex;
    padding-left: 20rpx;
}

.comic-wrapper .comic-details .cover {
    margin-right: 40rpx;
    width: var(--comic-cover_3_4-width, 31.5vw);
    height: var( --comic-cover_3_4-height, calc(31.5vw * 4 / 3));
    border-radius: var(--comic-cover_3_4-boder-radius, 10rpx);
}

.comic-wrapper .comic-details .content {
    display: flex;
    width: 60%;
    flex-flow: column nowrap;
    justify-content:space-between;
}

.content .head .button{
    display: flex;
    white-space:nowrap;
    margin-top: 10rpx;
    padding: 5rpx 10rpx;
    height: 30rpx;
    justify-content: center;
    align-items: center;
    border: black;
    border-style:solid;
    border-radius: 20rpx;
    border-width: thin;
    font-size: 25rpx;
    z-index: 999;
}

.comic-wrapper .content .head {
    display: flex;
    width: 100%;
    justify-content: space-between;
}

.content .head .title {
    font-size: 40rpx;
    font-weight: bold;
    width: 70%;
}

.comic-wrapper .content .info {
    padding-bottom: 20rpx;
    font-size: 22rpx;
    color: var(--comic-details-font-color, rgb(150, 151, 153));
}
  
.comic-wrapper .info .comic-tip,
.comic-wrapper .info .comic-heat {
    margin-bottom: 10rpx;
}

.comic-wrapper .comic-tip .copyright-type,
.comic-wrapper .comic-tip .comic-status,
.comic-wrapper .info .comic-type .item {
  display: inline-block;
}

.comic-wrapper .comic-type .item {
    height: 28rpx;
    line-height: 28rpx;
    padding: 0rpx 15rpx;
    border-radius: 30rpx;
    margin-right: 10rpx;
    border: 1rpx #e6e6e6 solid;
}
  
.comic-wrapper .comic-tip .copyright-type {
    padding: 0rpx 15rpx;
    border-radius: 30rpx;
    color: white;
    background-image: linear-gradient(90deg,#ff6a8d,#fe4e51);
}
  
.comic-wrapper .comic-tip .comic-status {
    font-size: 24rpx;
    /* margin-left: 15rpx; */
}
  
.comic-wrapper .info .comic-heat {
    display: block;
    font-size: 25rpx;
}