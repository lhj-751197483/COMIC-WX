/* setting.wxss */
.container {
	padding: 20rpx;
  }
  
  .avatar-container {
	margin-bottom: 20rpx;
	text-align: center;

  }
  
  .avatar {
	width: 300rpx;
	height: 300rpx;
	border-radius: 50%;
  }
  
  .change-avatar {
	margin-top: 10rpx;
	color: #007aff;
	font-size: 30rpx;
  }
  
  .input-container {
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
  }
  
  .label {
	width: 100rpx;
	font-size: 30rpx;
  }
  
  .input {
	flex: 1;
	padding: 5rpx 10rpx;
	border: 1rpx solid #ccc;
	border-radius: 4rpx;
  }
  
  .textarea {
	flex: 1;
	min-height: 100rpx;
	padding: 5rpx 10rpx;
	border: 1rpx solid #ccc;
	border-radius: 4rpx;
  }
  
  .save-btn {
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	background-color: #007aff;
	color: #fff;
	border-radius: 4rpx;
  }
  