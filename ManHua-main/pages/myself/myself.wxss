/* login.wxss */


.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100vh;
  }
  
.logo {
	width: 100px;
	height: 100px;
	margin-bottom: 30px;
}
  
.login-button {
	font-size: 16px;
	font-weight: bold;
	background-color: #00c510;
	color: #FFFFFF;
	border-radius: 30px;
}

.user-avatar {
	width: 80px;
	height: 80px;
	border-radius: 50%;
	border: 2px solid #000;
	overflow: hidden;
	z-index: 10;
	margin-bottom: 20px;
	margin-top: 12%;
}
  
.avatar-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
	background-color: white;
}

.user_container {
	display: flex;
	position: relative;
	height: 100vh;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
}
  

.background {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 15%;
	background-image: url('https://c-ssl.duitang.com/uploads/item/202004/02/20200402225729_YXLkH.jpeg');
	background-size: cover;
}

.username {
	font-weight: bold;
	color: green;
  }

  
.user-bio {
	color: gray;
	text-align: center;
  }

  .contact-wrapper {
	display: flex;
	align-items: center;
	width: 100%;
	border-bottom: 1px solid #ccc;
	padding: 30rpx
  }
  
  .contact-icon {
	margin-right: 10px;
	margin-left: 10px;
  }
  
  .contact-text {
	flex-grow: 1;
	font-weight: bold;
	color: rgba(0, 0, 0, 0.692);
  }
  
  .arrow-icon {
	margin-left: 10px;
	margin-right: 10px;
  }
  
  