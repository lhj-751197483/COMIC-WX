page {
  /* 底部导航高度 设置 */
  --tar-bar-height: 110rpx;

  --nav-bar-arrow-size: 38rpx;
  --nav-bar-title-font-size: 30rpx;

  --nav-bar-title-text-color: #696969;
  --nav-bar-icon-color: rgb(150, 151, 153);

  --padding-md: 38rpx;

  /* 首页轮播图 设置 */
  --comic-banner-width: 100vw;
  --comic-banner-height: calc(100vw * 2 / 3);

  --comic-cover_3_4-width: 31.5vw;
  --comic-cover_3_4-height: calc(31.5vw * 4 / 3);
  --comic-cover_3_4-boder-radius: 10rpx;

  --comic-details-font-color: rgb(150, 151, 153);
}

